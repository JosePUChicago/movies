<div class="page-header">
  <h1>
    Theaters
    <a href="/theaters/new" class="btn btn-lg btn-success">New Theater</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Address</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @theaters.each do |theater| %>
      <tr>
        <td><%= theater.address %></td>
        <td><%= theater.name %></td>
        <td>
          <a href="/theaters/<%= theater.id %>" class="btn btn-primary">Show</a>
          <a href="/theaters/<%= theater.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_theater/<%= theater.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
