<div class="page-header">
  <h3>Movie Watchlist #<%= @movie_watchlist.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @movie_watchlist.user.present? %>
          <a href="/users/<%= @movie_watchlist.user_id %>">
            <%= @movie_watchlist.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Movie</dt>
      <dd>
        <% if @movie_watchlist.movie.present? %>
          <a href="/movies/<%= @movie_watchlist.movie_id %>">
            <%= @movie_watchlist.movie.title %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/movie_watchlists" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @movie_watchlist.user %>
        <a href="/movie_watchlists/<%= @movie_watchlist.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_movie_watchlist/<%= @movie_watchlist.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
